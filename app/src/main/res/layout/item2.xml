<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <xyz.hui_yi.view.CircleImageView
        android:id="@+id/iv_uphoto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="3dp"
        android:backgroundTint="#708090"
        android:src="@drawable/image_uphoto_example"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp" />

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="18dp"
        android:layout_height="22dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="34dp" />

    <TextView
        android:id="@+id/tv_mtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会议名"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_uphoto"
        android:layout_toEndOf="@+id/iv_uphoto"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_mtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_type"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:text="会议时间"
        android:textColor="#778899"
        android:textSize="10sp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tv_bluetoothmac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_wlanmac"
        android:text=""
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_mtime"
        android:layout_alignBottom="@+id/iv_uphoto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_mid"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_mtime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_maddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会议地点"
        android:textSize="10sp"
        android:layout_alignTop="@+id/tv_wlanmac"
        android:layout_toRightOf="@+id/iv_uphoto"
        android:layout_toEndOf="@+id/iv_uphoto" />

    <TextView
        android:id="@+id/tv_sign_id"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_mtime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>