<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <xyz.hui_yi.layout.EmptyLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_above="@+id/tv_info_mcontent"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="71dp" />

            <xyz.hui_yi.utils.image.SmartImageView
                android:id="@+id/iv_info_mimage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignEnd="@+id/tv_info_mtitle"
                android:layout_alignLeft="@+id/tv_info_mcontent"
                android:layout_alignRight="@+id/tv_info_mtitle"
                android:layout_alignStart="@+id/tv_info_mcontent"
                android:layout_below="@+id/tv_info_mtitle"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_info_mtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="标题"
                android:textColor="@color/colorDark"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/tv_info_mstarttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_info_mcontent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="开始时间："
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_info_mendtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_info_mstarttime"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:text="结束时间："
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_info_maddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_info_mendtime"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:text="地点："
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_info_mcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_info_mtitle"
                android:layout_alignStart="@+id/tv_info_mtitle"
                android:layout_below="@id/iv_info_mimage"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="3dp"
                android:text="会议内容："
                android:textColor="@color/colorDark"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_info_maddress"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_info_founder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="21dp"
                    android:text="发布人:"
                    android:textSize="15sp" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    </xyz.hui_yi.layout.EmptyLayout>

</RelativeLayout>
