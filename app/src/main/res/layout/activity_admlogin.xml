<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="81dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="55dp"
            android:layout_height="19dp"
            android:text="账号名:"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/et_mtitle"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/et_mtitle" />

        <EditText
            android:id="@+id/et_mtitle"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/et_edittext_bg"
            android:drawableLeft="@mipmap/ic_user"
            android:drawablePadding="5dp"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:ems="10"
            android:hint="请输入账号名"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="密码："
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/et_admpwd1"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/et_admpwd1" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/et_edittext_bg"
            android:drawableLeft="@mipmap/ic_code"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="请输入管理员授权码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingEnd="35dp"
            android:paddingLeft="5dp"
            android:paddingRight="30dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_admpwd1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <CheckBox
            android:id="@+id/cb_ischeck"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="69dp"
            android:text="记住密码"
            android:scaleX="0.85"
            android:scaleY="0.85"
            android:textColor="@color/dimgray"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/et_admpwd1"
            app:layout_constraintRight_toRightOf="@+id/et_admpwd1"
            app:layout_constraintTop_toBottomOf="@+id/et_admpwd1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="授权码:"
            app:layout_constraintBottom_toTopOf="@+id/et_code"
            app:layout_constraintLeft_toLeftOf="@+id/et_code"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <EditText
            android:id="@+id/et_admpwd1"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/et_edittext_bg"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:drawableLeft="@mipmap/ic_locked"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="请输入账号密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingEnd="35dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_mtitle"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/tv_admreg"
            android:layout_width="129dp"
            android:layout_height="17dp"
            android:layout_marginBottom="29dp"
            android:clickable="true"
            android:text="暂无账号？立即注册"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv"
            app:layout_constraintVertical_bias="1.0" />

        <SeekBar
            android:id="@+id/sb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="128dp"
            android:max="100"
            android:progress="10"
            android:progressDrawable="@drawable/seekbar_bg"
            android:splitTrack="false"
            android:thumb="@mipmap/ic_thumb"
            android:minHeight="45dp"
            android:maxHeight="45dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_admreg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/et_mtitle"
            app:layout_constraintRight_toRightOf="@+id/et_code"
            app:layout_constraintTop_toBottomOf="@+id/cb_ischeck"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            app:layout_constraintVertical_bias="0.52" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="239dp"
            android:layout_height="29dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="108dp"
            android:layout_marginLeft="108dp"
            android:layout_marginRight="108dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="向右滑动滑块的登陆"
            android:textColor="#888888"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/sb"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sb"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <ImageView
            android:id="@+id/iv_eye"
            android:clickable="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/image_eye_slector"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/et_code"
            app:layout_constraintBottom_toBottomOf="@+id/et_code"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/iv_eye_pwd"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/iv_eye_pwd" />

        <ImageView
            android:id="@+id/iv_eye_pwd"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/image_eye_slector"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@+id/et_admpwd1"
            app:layout_constraintHorizontal_bias="0.961"
            app:layout_constraintLeft_toLeftOf="@+id/et_admpwd1"
            app:layout_constraintRight_toRightOf="@+id/et_admpwd1"
            app:layout_constraintTop_toTopOf="@+id/et_admpwd1"
            app:layout_constraintVertical_bias="0.666" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>